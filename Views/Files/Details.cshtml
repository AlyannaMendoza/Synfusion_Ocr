@model FileMetadata

@{
    ViewData["Title"] = @Model.FileName;
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title text-center">@Model.FileName</h3>
    </div>
    <div class="panel-body">
        <h5 class="card-subtitle text-muted">Uploaded Date: @Model.UploadDate</h5>
        <h6 class="card-subtitle text-muted">Uploaded Date: @Model.ContentType</h6>
        <p><strong>Size:</strong> @Model.Size bytes</p>
        <iframe src="@Url.Action("GetFile", "Files", new { id = Model.Id })" width="100%" height="800px"></iframe>
    </div>

    <div class="form-group">
        <label>Result:</label>
        <textarea class="form-control" rows="10" readonly>@Model.OcrResult.ExtractedText</textarea>
    </div>
</div>
